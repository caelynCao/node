  <button type="submit" class="btn btn-info">同意</button>
  <button type="submit" class="btn btn-danger">不同意</button>
  </div>
    <script type="text/javascript">
        danger = document.querySelector("#danger");

        $('button').eq(1).click(()=>{
          console.log("aaa");
          $('#alert').css({display:"none"});
        })
        $('button').eq(2).click(()=>{
          console.log("nbn")
          location.href = "/login";
        }) 
        $('#exampleInputEmail1').blur(()=>{
          console.log("aasa");
          $.ajax({
            url:"/register/checkIt",
            data:{
              email:$('#exampleInputEmail1').val()
            },
            success(result){
              console.log(result);
              if(!result.ok){
                danger.style.display = "block";
              } else{
                danger.style.display = "none";
              }
