  <style type="text/css">
        body{
          background: url(/images/1.jpg) no-repeat;
          background-size:100%; 
        }
        #registerhtml{
          width: 400px;
          margin:100px; 
          background: #f0f0f0;
          height: 450px;
          border-radius: 10px;
        }
        #registerhtml .container .form-group #exampleInputEmail1 ,#registerhtml .container .form-group #exampleInputname1,
        #registerhtml .container .form-group #exampleInputPassword1,#loginhtml .container  #danger{
          width: 350px;
        }
        #registerhtml #nav{
          height: 50px;
          line-height: 50px;
          background:#77a9d8;
          border-radius: 10px 10px 0 0;
          font-size: 30px; 
          text-align: center;
          margin-bottom: 35px;
        }
        #registerhtml #nav a{
          color: #fff;
        }
        #registerhtml .container button{
          width: 350px;
          margin-top: 10px;
        }
        a{
          text-decoration: none;
          color: #fff;
        }
        #danger{
          display: none;
          color: #f00;
          width: 350px;
        }
        #alert{
          width:700px;
          position: fixed;
          top: 50px;
          left: 300px;
          background: #fff;
          height: 600px;
          display: block;
        }
        #alert h2{
          text-align:center;
        }
        #alert p{
          text-indent: 20px;
          padding:25px;
        }
        #alert button{
          margin: 20px 130px;
        }
    </style>
  <body>                                                                         
    <div id="registerhtml">
    <h2 id="nav">
      <a href="/register">欢迎，请注册</a>
    </h2>
    <div class="container">
        <form action="/register/validate" method="post">
          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="email">
          </div>
          <div class="alert alert-danger" role="alert" id="danger">用户名已存在</div>
          <div class="form-group">
            <label for="exampleInputname1">name</label>
            <input type="text" class="form-control" id="exampleInputname1" placeholder="name" name="username">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
          </div>
          <button type="submit" class="btn btn-danger">register</button>
        </form>
    </div>
  </div>
